# ============================================================================
# LingoLab Backend - Production Environment Configuration
# ============================================================================
# Copy this file to .env in production and update with real values

# Server Configuration
NODE_ENV=production
PORT=3001

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=CHANGE_THIS_IN_PRODUCTION
DB_NAME=lingolab_db

# TypeORM Configuration
TYPEORM_SYNCHRONIZE=false
TYPEORM_LOGGING=false

# JWT Configuration
JWT_SECRET=CHANGE_THIS_TO_STRONG_SECRET_KEY
JWT_REFRESH_SECRET=CHANGE_THIS_TO_ANOTHER_STRONG_SECRET
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# AI Model Integration
AI_MODEL_URL=http://host.docker.internal:8000
GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=LingoLab <noreply@lingolab.com>

# Rate Limiting
DISABLE_RATE_LIMIT=false

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=info
